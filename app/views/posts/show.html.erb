<% provide(:page_title, @post.title) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= link_to 'Add Book', new_book_to_post_path(@post.id) %>

<br>

<% if @post.user_id == current_user.id %>
<%= link_to 'Edit', edit_post_path(@post) %> | 
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% else %>
<%= link_to 'Reply',  new_reply_to_post_path(@post.id) %>
<% end %>
<%= link_to 'Back', posts_path %>

  <% if @replies.blank? %>
    <h3>No Replies Yet</h3>
  <% else %>
	<h1>Replies</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Options</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.body %></td>
        <td><%= link_to 'View', reply %></td>

        <!-- If user is signed in, show additional options -->
        <% if reply.user_id == current_user.id %> 
        
        <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
        <td><%= link_to 'Delete', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <%end%>

      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

