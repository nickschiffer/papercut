<% provide(:page_title, @post.title) %>
<%= stylesheet_link_tag 'showpost' %>
<div class="mx-auto text-center">
	<p id="notice"><%= notice %></p>
	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>
	<p>
		<strong>Location:</strong>
			<%# render_gmap_coordinate_picker api_key: ENV["MAPS_API_KEY"],  :static => 'true', :zoom_level => 10, :default_coordinates => [@post.latitude,@post.longitude]   %>
	</p>
	<div class="row mx-auto text-center">
      <div class="col"></div>
        <div class="col d-flex justify-content-center">
          <%= render_gmap_coordinate_picker api_key: ENV["MAPS_API_KEY"], 'static'  => 'true', :default_coordinates => [@post.latitude,@post.longitude] , :zoom_level => 10, :map_width => '300px', :map_height => '200px'  %>
        </div>
      <div class="col"></div>
    </div>

	<% if @books.blank? %>
	    <h3>No Books Yet</h3>
	<%else%>
	<h2>Books</h2>
	<%# render 'layouts/partials/post/books' %>
		<div class="row">
			<%= render @books %>
    	</div>
		<%end%>

	<% if @post.user_id == current_user.id %>
		<%= link_to new_book_to_post_path(@post.id), class: 'btn btn-success' do %>
		  <span>
		    <i class="fa fa-plus"></i>
		    Add Book
		  </span>
		<% end %>

	<br>
	<br>
		<%= link_to edit_post_path(@post), class: 'btn btn-warning' do %>
			<span>
				<i class="fa fa-edit"></i>
				Edit Post
			</span> 
		<% end %> | 
		<%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %> 
			<span>
				<i class="fa fa-trash"></i>
				Delete Post
			</span>
		<% end %> |
	<% else %>
		<%= link_to new_reply_to_post_path(@post.id), class: 'btn btn-primary' do %>
			<span>
				<i class="fa fa-pen-reply"></i>
				Reply to Post
			</span>
		<% end %> |
	<% end %>
	<%= link_to posts_path, class: 'btn btn-primary' do %>
		<span>
			<i class="fa fa-backward"></i>
			Back
		</span>
	<% end %>
	<br></br>
	<% if @replies.blank? %>
	  <h3>No Replies Yet</h3>
	<%else%>
	<%# render 'layouts/partials/post/books' %>
	 <h2>Replies</h2>
	 <div class="row">
			<%= render @replies %>
   </div>
	 <%end%>
</div>