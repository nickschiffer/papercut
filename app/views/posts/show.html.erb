<% provide(:page_title, @post.title) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if @books.blank? %>
    <h3>No Books Yet</h3>
    <%= link_to 'Create One?', new_book_path, class: 'btn btn-success'%>
    <%else%>
<%# render 'layouts/partials/post/books' %>
<%= render @books %>
	<%end%>

<% if @post.user_id == current_user.id %>
<%= link_to 'Add Book', new_book_to_post_path(@post.id) %>

<br>
<%= link_to 'Edit Post', edit_post_path(@post) %> | 
<%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% else %>
<%= link_to 'Reply to Post',  new_reply_to_post_path(@post.id) %><br>
<% end %>
<%= link_to 'Back', posts_path %>

<%= render 'layouts/partials/post/replies' %>