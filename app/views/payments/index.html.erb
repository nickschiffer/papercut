<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment method</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Credit card number</th>
      <th>Credit card cvc</th>
      <th>Credit card exp</th>
      <th>Paypal email</th>
      <th>Paypal password</th>
      <th>Zelle email</th>
      <th>Zelle password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_method %></td>
        <td><%= payment.address %></td>
        <td><%= payment.city %></td>
        <td><%= payment.state %></td>
        <td><%= payment.zip %></td>
        <td><%= payment.credit_card_number %></td>
        <td><%= payment.credit_card_cvc %></td>
        <td><%= payment.credit_card_exp %></td>
        <td><%= payment.paypal_email %></td>
        <td><%= payment.paypal_password %></td>
        <td><%= payment.zelle_email %></td>
        <td><%= payment.zelle_password %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

