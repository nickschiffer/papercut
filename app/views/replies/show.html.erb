<% provide(:page_title, @post.title) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @reply.body %>
</p>

	<% if @reply.user_id == current_user.id %> 
    

    	<td><%= link_to 'Delete', @reply, method: :delete, data: { confirm: 'Are you sure?' } %> |</td>
    
    <%end%>
<%= link_to 'Edit', :action => "edit", :id => @reply.id, :post_id => @reply.post_id %> |
<%= link_to 'Back', post_path(@reply.post_id) %>
