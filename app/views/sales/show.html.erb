<p id="notice"><%= notice %></p>
<% if (current_user.id == @sale.seller_id) %>
    <% if @sale.trade_id != nil %>
        <%= render "layouts/partials/sales/seller_with_trade_state_0" %>
    <% end %>
<% end %>
<% if (current_user.id == @sale.buyer_id) %>
    <% if @sale.trade_id != nil %>
        <%= render "layouts/partials/sales/buyer_with_trade_state_0" %>
    <% end %>
<% end %>
<% if (current_user.id == @sale.buyer_id) or (current_user.id == @sale.seller_id) %>
    <%= link_to @sale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %> 
		<span>
			<i class="fa fa-trash"></i>
			Cancel Sale
		</span>
	<% end %> |
<% end %> 
<%= link_to :back, class: 'btn btn-primary' do %>
  <span>
  <i class="fa fa-backward"></i>
  Back
  </span>

<% end %>
